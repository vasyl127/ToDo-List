
<h4><%=  @project.name %>
  <%= link_to "✏️", edit_project_path(@project), class: 'btn btn-outline-warning ms-2' %>   
</h4>
<hr>
<p class = "text-muted">
  <small> 
    Created: <%=  @project.created_at.strftime('%d.%m.%Y') %>
    Updated: <%= @project.updated_at.strftime('%d.%m.%Y') %>
  </small>
</p>
<ul><%= render @project.costs %></ul>
<div>
  <%= link_to "Back to projects", projects_path, class: 'btn btn-outline-secondary mb-2 me-2' %>
  <%= button_to "Destroy this project", @project, method: :delete, class: 'btn btn-outline-danger' %>
</div>

