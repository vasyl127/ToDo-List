<p style="color: green"><%= notice %></p>

<h4><%=  @task.name %>
  <%= link_to "✏️", edit_task_path(@task), class: 'btn btn-outline-warning ms-2' %>   
</h4>
<hr>
<p class = "text-muted">
  <small> 
    Created: <%=  @task.created_at.strftime('%d.%m.%Y') %>
    Updated: <%= @task.updated_at.strftime('%d.%m.%Y') %>
  </small>
</p>
<p><%= @task.text %></p>
<div>
  <%= link_to "Back to tasks", tasks_path, class: 'btn btn-outline-secondary mb-2 me-2' %>
  <%= button_to "Destroy this task", @task, method: :delete, class: 'btn btn-outline-danger' %>
</div>

